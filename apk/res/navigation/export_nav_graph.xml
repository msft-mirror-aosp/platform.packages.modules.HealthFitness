<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/export_nav_graph"
    app:startDestination="@id/exportFrequencyFragment">

    <fragment
        android:id="@+id/exportFrequencyFragment"
        android:name="com.android.healthconnect.controller.exportimport.ExportFrequencyFragment">
        <action
            android:id="@+id/action_exportFrequencyFragment_to_exportDestinationFragment"
            app:destination="@id/exportDestinationFragment" />
    </fragment>

    <fragment
        android:id="@+id/exportDestinationFragment"
        android:name="com.android.healthconnect.controller.exportimport.ExportDestinationFragment">
        <action
            android:id="@+id/action_exportDestinationFragment_to_exportFrequencyFragment"
            app:destination="@id/exportFrequencyFragment" />
        <action
            android:id="@+id/action_exportDestinationFragment_to_playStore"
            app:destination="@id/play_store_activity" />
    </fragment>

    <activity
        android:id="@+id/play_store_activity"
        app:action="android.intent.action.VIEW"
        android:label="@string/playstore_app_title"
        app:data="@string/playstore_url"
        app:targetPackage="@string/playstore_package_name" />
</navigation>
