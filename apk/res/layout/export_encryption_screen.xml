<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/export_encryption_screen"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingHorizontal="@dimen/spacing_large">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/export_encryption_header_lock_icon"
            android:layout_width="@dimen/app_header_icon_size"
            android:layout_height="@dimen/app_header_icon_size"
            android:layout_marginTop="@dimen/spacing_large"
            android:layout_marginBottom="@dimen/spacing_normal"
            android:importantForAccessibility="no"
            android:src="?attr/lockIcon" />

        <TextView
            android:id="@+id/export_encryption_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/spacing_normal"
            android:text="@string/export_encryption_title"
            android:textAppearance="?attr/textAppearanceHeadline2" />

        <TextView
            android:id="@+id/export_encryption_safety_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/spacing_normal"
            android:layout_marginBottom="@dimen/spacing_normal"
            android:text="@string/export_encryption_safety_description"
            android:textAppearance="?attr/textAppearanceSummaryLarge" />

        <TextView
            android:id="@+id/export_encryption_instruction_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/spacing_normal"
            android:text="@string/export_encryption_instruction_description"
            android:textAppearance="?attr/textAppearanceSummaryLarge" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginVertical="@dimen/spacing_large"
        android:layout_weight="1"
        android:orientation="vertical">

        <!-- TODO: b/325917283 - Add proper auto fill functionality. -->
        <EditText
            android:id="@+id/export_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/spacing_normal"
            android:hint="@string/export_password_hint"
            android:importantForAutofill="no"
            android:inputType="textPassword" />

        <EditText
            android:id="@+id/export_repeat_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/export_repeat_password_hint"
            android:importantForAutofill="no"
            android:inputType="textPassword" />

    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="@dimen/spacing_large"
        android:baselineAligned="false"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/export_encryption_warning_icon"
            android:layout_width="@dimen/icon_size"
            android:layout_height="@dimen/icon_size"
            android:importantForAccessibility="no"
            android:layout_marginEnd="@dimen/spacing_normal"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:src="?attr/warningIcon"/>

        <TextView
            android:id="@+id/export_encryption_warning"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/export_encryption_warning_icon"
            android:layout_alignParentTop="true"
            android:text="@string/export_encryption_warning"
            android:textAppearance="?attr/textAppearanceSummaryLarge" />
    </RelativeLayout>

    <include layout="@layout/widget_export_navigation_buttons" />
</LinearLayout>
