<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingHorizontal="@dimen/spacing_large"
    android:paddingVertical="@dimen/spacing_normal"
    android:orientation="horizontal"
    android:layout_alignParentBottom="true">

    <com.google.android.material.button.MaterialButton
        android:id="@+id/secondary_button"
        style="@style/Widget.HealthConnect.SetupButton.Expressive.Outline"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center"
        android:maxLines="2"
        android:layout_marginEnd="@dimen/spacing_xxsmall"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/primary_button_full"
        style="@style/Widget.HealthConnect.SetupButton.Expressive.Full"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center"
        android:maxLines="2"
        android:layout_marginStart="@dimen/spacing_xxsmall"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/primary_button_outline"
        style="@style/Widget.HealthConnect.SetupButton.Expressive.Outline"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center"
        android:maxLines="2"
        android:layout_marginStart="@dimen/spacing_xxsmall"
        android:visibility="gone"/>
</LinearLayout>